{% extends 'base.html.twig' %}

{% block title %}Empire BTP{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3">Bienvenue sur Empire BTP</h1>
        <p class="lead text-muted">Construisez votre empire du bâtiment</p>
    </div>

    {% if not app.user %}
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 text-center">
                <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg mb-3 w-100">
                    Créer un compte
                </a>
                <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-lg w-100">
                    Se connecter
                </a>
            </div>
        </div>
    {% else %}
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <h2 class="mb-4">Bonjour {{ app.user.email }} !</h2>
                        <a href="#" class="btn btn-success btn-lg">
                            Commencer à jouer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
