{% extends 'base.html.twig' %}

{% block title %}Secteur Transport - Empire BTP{% endblock %}

{% block body %}
<!-- Navbar secondaire spécifique au secteur Transport -->
<nav class="navbar navbar-expand-lg navbar-secteur sticky-top shadow-sm">
    <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">🚚 Secteur Transport</span>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTransport">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTransport">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('app_secteur_transport') }}">🏠 Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">📦 Livraisons</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">🚜 Matériel Transport</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">🗺️ Trajets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">📊 Statistiques</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">🎯 Missions</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container my-5">
    <div class="row">
        <div class="col-12 text-center">
            <div class="construction-banner transport p-5 rounded shadow-lg">
                <div class="construction-icon mb-4">
                    �
                </div>
                <h1 class="display-3 mb-3">🚚 Secteur Transport</h1>
                
                <div class="row mt-5">
                    <div class="col-md-4 mb-3">
                        <div class="feature-box p-4 rounded">
                            <h3>📦 Logistique</h3>
                            <p class="text-muted">Livraisons, transferts, acheminement</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="feature-box p-4 rounded">
                            <h3>🚜 Matériel</h3>
                            <p class="text-muted">{{ machines|length }} machines disponibles</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="feature-box p-4 rounded">
                            <h3>🗺️ Optimisation</h3>
                            <p class="text-muted">Trajets, rentabilité, efficacité</p>
                        </div>
                    </div>
                </div>
                
                <div class="mt-5">
                    <a href="{{ path('app_accueil') }}" class="btn btn-custom btn-primary-custom btn-lg me-3">
                        🏠 Retour à l'accueil
                    </a>
                    <a href="{{ path('app_materiel') }}" class="btn btn-custom btn-secondary-custom btn-lg">
                        📋 Voir le catalogue complet
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Navbar Secteur - Thème Duffus */
    .navbar-secteur {
        background: var(--bg-secondary);
        border-bottom: 3px solid var(--accent-primary);
    }
    
    .navbar-secteur .navbar-brand {
        color: var(--text-primary);
        font-weight: bold;
        font-size: 1.3rem;
    }
    
    .navbar-secteur .nav-link {
        color: var(--text-secondary);
        font-weight: 500;
        padding: 0.5rem 1rem;
        margin: 0 0.2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .navbar-secteur .nav-link:hover {
        background: var(--accent-primary);
        color: var(--bg-main);
        transform: translateY(-2px);
        box-shadow: 0 0 15px var(--accent-glow);
    }
    
    .navbar-secteur .nav-link.active {
        background: var(--accent-primary);
        color: var(--bg-main);
        font-weight: bold;
    }
    
    .construction-banner.transport {
        background: var(--bg-secondary);
        color: var(--text-primary);
        border: 2px solid var(--border-primary);
    }
    
    .construction-icon {
        font-size: 8rem;
        animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }
    
    .feature-box {
        background: var(--bg-main);
        backdrop-filter: blur(10px);
        border: 2px solid var(--border-primary);
        transition: all 0.3s ease;
    }
    
    .feature-box:hover {
        border-color: var(--accent-primary);
        box-shadow: 0 0 20px var(--accent-glow);
        transform: translateY(-5px);
    }
    
    .feature-box h3 {
        color: var(--accent-primary);
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }
</style>
{% endblock %}
