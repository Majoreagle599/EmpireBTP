{% block javascripts %}
    {{ parent() }}
    <script>
        function clearCache() {
            if (confirm('√ätes-vous s√ªr de vouloir vider le cache ?')) {
                // Simulation du vidage de cache
                const btn = event.target;
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Vidage...';
                btn.disabled = true;
                
                setTimeout(() => {
                    btn.innerHTML = '<i class="fas fa-check"></i> Cache vid√© !';
                    btn.className = 'btn btn-success';
                    
                    setTimeout(() => {
                        btn.innerHTML = originalText;
                        btn.className = 'btn btn-danger';
                        btn.disabled = false;
                    }, 2000);
                }, 1500);
            }
        }

        function showDatabaseInfo() {
            alert('Base de donn√©es: SQLite\\nUtilisateurs: {{ stats.totalUsers ?? 0 }}\\nFichier: var/data.db');
        }

        function showRoutes() {
            const routes = [
                '/ - Accueil',
                '/connexion - Login',
                '/inscription - Inscription', 
                '/admin - Administration',
                '/compte - Profil utilisateur'
            ];
            alert('Routes principales:\\n\\n' + routes.join('\\n'));
        }

        function showServices() {
            alert('Services principaux:\\n\\n‚Ä¢ UserRepository\\n‚Ä¢ UserPasswordHasher\\n‚Ä¢ Security\\n‚Ä¢ Doctrine ORM\\n‚Ä¢ EasyAdmin\\n‚Ä¢ Webpack Encore');
        }

        // Animation des cartes au chargement
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
{% endblock %}