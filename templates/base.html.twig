<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-md navbar-dark navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_accueil') }}">
                    🏗️ Empire BTP
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_reglement') }}">📜 Règlement</a>
                        </li>
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_account') }}">👤 Mon compte</a>
                            </li>
                        {% endif %}
                    </ul>
                    
                    <div class="d-flex align-items-center">
                        {# Bouton mode sombre - toujours visible #}
                        <button id="darkModeToggle" class="btn btn-outline-light btn-sm me-2" title="Changer de thème">🌙</button>
                        
                        {% if app.user %}
                            <span class="navbar-text me-3">
                                {{ app.user.email }}
                            </span>
                            <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">🚪 Déconnexion</a>
                        {% else %}
                            <a class="btn btn-outline-light btn-sm me-2" href="{{ path('app_login') }}">🔑 Connexion</a>
                            <a class="btn btn-warning btn-sm" href="{{ path('app_register') }}">✨ Inscription</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>

        <main>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show container" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>
    </body>
</html>
