{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center">Mon compte</h1>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="col-md-6 offset-md-3">
        <h2 class="text-center">Mes informations</h2>
        <p><strong>Email:</strong> {{ app.user.email }}</p>
        
        {% if is_granted('ROLE_ADMIN') %}
            <div class="alert alert-info">
                <strong>Vous êtes administrateur</strong>
            </div>
            <a href="{{ path('admin') }}" class="btn btn-primary mb-3">
                <i class="fas fa-cog"></i> Accéder à l'administration
            </a>
        {% endif %}
        
        <div class="mt-4">
            <a href="{{ path('app_account_modify_pwd') }}" class="btn btn-success">Modifier Mot de Passe</a>
            <a href="{{ path('app_logout') }}" class="btn btn-danger">Me déconnecter</a>
        </div>
    </div>
</div>
{% endblock %}
